<?xml version="1.0"?>
<allocations>
  <queue name="sample_queue">
    <minResources>0mb,2vcores</minResources>
    <maxResources>0mb,2vcores</maxResources>
    <maxRunningApps>50</maxRunningApps>
    <maxAMShare>-1.0f</maxAMShare>
    <weight>2.0</weight>
    <schedulingPolicy>fair</schedulingPolicy>
  </queue>

  <queueMaxAMShareDefault>-1.0f</queueMaxAMShareDefault>
  <queueMaxResourcesDefault>40000 mb,2vcores</queueMaxResourcesDefault>

  <!-- Queue 'secondary_group_queue' is a parent queue and may have
              user queues under it -->
  <queue name="secondary_group_queue" type="parent">
  <weight>3.0</weight>
  <maxChildResources>4096 mb,4vcores</maxChildResources>
  </queue>

  <user name="sample_user">
    <maxRunningApps>30</maxRunningApps>
  </user>
  <userMaxAppsDefault>5</userMaxAppsDefault>

  <queuePlacementPolicy>
    <rule name="specified" />
    <rule name="primaryGroup" create="false" />
    <rule name="nestedUserQueue">
        <rule name="secondaryGroupExistingQueue" create="false" />
    </rule>
    <rule name="default" queue="sample_queue"/>
  </queuePlacementPolicy>
</allocations>
